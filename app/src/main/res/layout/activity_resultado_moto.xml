        android:padding="16dp"
        android:text="Km "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_litros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distancia"
